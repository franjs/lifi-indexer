{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2022",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
  },
  "ts-node": {
    "transpileOnly": false,
    "files": true,
  },
  "exclude": ["node_modules"],
}
