{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2022",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "transpileOnly": false,
    "files": true
  },
  "exclude": ["node_modules"]
}
